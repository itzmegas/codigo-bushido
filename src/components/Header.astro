<style>
  header {
    display: flex;
    position: relative;
    justify-content: center;
  }
  nav {
    display: flex;
    justify-content: center;
    height: 9rem;
    width: 100%;
  }
  .nav-routes {
    display: flex;
    justify-content: center;
    align-items: center;
    list-style: none;
    width: 100%;
    font-size: 1.1rem;
    margin-right: 1rem;
  }
  .divider {
    width: 16rem;
  }
  .link {
    padding: 2.2rem 1.95rem;
    border-bottom: 5px solid transparent;
    &:hover {
      color: var(--color-primary);
      border-bottom-color: var(--color-primary);
    }
  }
  .logos {
    padding-top: 0.6rem;
    position: absolute;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
    top: 0;
  }
  .menu {
    display: none;
    background: none;
    color: white;
    border: none;
    cursor: pointer;
  }

  @media screen and (max-width: 975px) {
    .nav-routes {
      display: none;
    }
    nav {
      flex-direction: row-reverse;
      justify-content: space-between;
    }

    .menu {
      display: inline;
    }
  }
</style>
